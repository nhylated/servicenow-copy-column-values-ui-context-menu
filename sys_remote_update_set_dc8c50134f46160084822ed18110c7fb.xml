<name>sys_ui_page_128814df4f06160084822ed18110c7de</name>
<payload>&lt;?xml version="1.0" encoding="UTF-8"?&gt;&lt;record_update table="sys_ui_page"&gt;&lt;sys_ui_page action="INSERT_OR_UPDATE"&gt;&lt;category&gt;general&lt;/category&gt;&lt;client_script&gt;&lt;![CDATA[jQuery('#copyColumnValuesTxtArea').select();]]&gt;&lt;/client_script&gt;&lt;description&gt;For 'Copy Column Values' context menu.&lt;/description&gt;&lt;endpoint/&gt;&lt;html&gt;&lt;![CDATA[&lt;?xml version="1.0" encoding="utf-8" ?&gt;
&lt;j:jelly trim="false" xmlns:j="jelly:core" xmlns:g="glide" xmlns:j2="null" xmlns:g2="null"&gt;
    
    Please use Ctrl+C to copy the data and escape to dismiss this dialog.&lt;br/&gt;

    &lt;j:set var="jvar_list_query" value="${RP.getWindowProperties().get('list_query')}" /&gt;
    &lt;j:set var="jvar_list_table" value="${RP.getWindowProperties().get('list_table')}" /&gt;
    &lt;j:set var="jvar_field_to_copy" value="${RP.getWindowProperties().get('field_to_copy')}" /&gt;
    
    &lt;g:evaluate jelly="true"&gt;
      // Remember, any variables defined here are automatically added to the global scope
      var fieldToCopy = jelly.jvar_field_to_copy;
      var grListTable = new GlideRecord(jelly.jvar_list_table);
      grListTable.addEncodedQuery(jelly.jvar_list_query);
      grListTable.query();

      var valuesStr = '';
      while (grListTable.next()) {
        var currValue = '';
        if (grListTable[fieldToCopy].getDisplayValue != undefined) {
          currValue = grListTable[fieldToCopy].getDisplayValue();
        } else {
          currValue = grListTable[fieldToCopy].toString();
        }
        valuesStr += currValue + '\n';
      }
    &lt;/g:evaluate&gt;

    &lt;textarea id='copyColumnValuesTxtArea' style='height: 250px; width: 250px;'&gt;
        ${valuesStr}
    &lt;/textarea&gt;
&lt;/j:jelly&gt;
]]&gt;&lt;/html&gt;&lt;name&gt;copy_column_values&lt;/name&gt;&lt;processing_script/&gt;&lt;sys_class_name&gt;sys_ui_page&lt;/sys_class_name&gt;&lt;sys_created_by&gt;admin&lt;/sys_created_by&gt;&lt;sys_created_on&gt;2016-03-14 03:53:24&lt;/sys_created_on&gt;&lt;sys_customer_update&gt;true&lt;/sys_customer_update&gt;&lt;sys_id&gt;128814df4f06160084822ed18110c7de&lt;/sys_id&gt;&lt;sys_mod_count&gt;1&lt;/sys_mod_count&gt;&lt;sys_name&gt;copy_column_values&lt;/sys_name&gt;&lt;sys_package display_value="Global" source="global"&gt;global&lt;/sys_package&gt;&lt;sys_policy/&gt;&lt;sys_replace_on_upgrade&gt;false&lt;/sys_replace_on_upgrade&gt;&lt;sys_scope display_value="Global"&gt;global&lt;/sys_scope&gt;&lt;sys_update_name&gt;sys_ui_page_128814df4f06160084822ed18110c7de&lt;/sys_update_name&gt;&lt;sys_updated_by&gt;admin&lt;/sys_updated_by&gt;&lt;sys_updated_on&gt;2016-03-14 03:53:37&lt;/sys_updated_on&gt;&lt;/sys_ui_page&gt;&lt;/record_update&gt;</payload>
